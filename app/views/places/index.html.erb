<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
	</head>
	<body>
		<% @places.each do |place| %>
		
		
			<div class="booyah-box col-10 offset-1">
				<div class="row">
					<div class="col-8">
						<h1><%= link_to place.name, place_path(place), class: 'dark_link' %></h1>
						<i><%= place.address %></i><br /><br />
						<p><%= place.description %></p><br />
					</div>
					<div class="col-4">
						<% if place.photos.present? %>
							<% if place.photos.last.picture.present? %>
								<%= image_tag place.photos.last.picture.url, class: 'testSheet' %>
							<% end %>
						<% end %>
					</div>
			
			<% if place.user.present? %>
				<small><%= place.user.email %></small>
			<% end %>
			
			
			<% if place.comments.present? %>
			<div class="col-12">
				<blockquote>
					<% if place.comments.last.humanized_rating.present? %>
						<b><%= place.comments.last.humanized_rating %></b><br />
					<% end %>
					<%= place.comments.last.message %><br />
					<small><%= place.comments.last.user.email %></small>
				</blockquote>
			</div>
			<% end %>
		
		</div>
		</div>

		<% end %>
		
		
		
		
		<div class="a_pagination">
			<div class="page_info">
				<%= page_entries_info @posts %>
			</div>
			<%= will_paginate @posts, :container => false %>
		</div>

	</body>
</html>